{
    "dataset_reader": {
        "type": "twtc_reader",
        "lazy": true
    },
    "train_data_path": "datasets/twtc/train.csv",
    "validation_data_path": "datasets/twtc/test.csv",
    "model": {
        "type": "HAN",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 25,
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "HierarchicalAttention",
            "word_encoder": {
                "type": "gru",
                "input_size": 25,
                "hidden_size": 25,
                "num_layers": 1
            },
            "sent_encoder": {
                "type": "intra_sentence_attention",
                "input_dim": 25,
                "output_dim": 25
            }
        },
        "loss_weights": [
            0.1, 
            1.0
        ]
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 2
    },
    "trainer": {
        "num_epochs": 15,
        "cuda_device": 0,
        "grad_clipping": 1,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam"
        }
    }
}
