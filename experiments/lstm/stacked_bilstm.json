{
    "dataset_reader": {
        "type": std.extVar('DATA_READER')
    },
    "train_data_path": std.extVar('TRAIN_PATH'),
    "validation_data_path": std.extVar('TEST_PATH'),
    "model": {
        "type": "basic_classifier",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 100,
                    "trainable": true
                }
            }
        },
        "seq2vec_encoder": {
            "type": "stacked_bidirectional_lstm",
            "input_size": 100,
            "hidden_size": 100,
            "num_layers": 1
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ],
        "padding_noise": 0,
        "batch_size": 16
    },
    "trainer": {
        "num_epochs": 15,
        "cuda_device": std.extVar('CUDA_DEVICE'),
        "grad_clipping": 1,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
