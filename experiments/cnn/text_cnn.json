{
    "dataset_reader": {
        "type": std.extVar('DATA_READER')
    },
    "train_data_path": std.extVar('TRAIN_PATH'),
    "validation_data_path": std.extVar('TEST_PATH'),
    "model": {
        "type": "basic_classifier",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 200,
                    "trainable": true
                }
            }
        },
        "seq2vec_encoder": {
            "type": "cnn",
            "embedding_dim": 200,
            "num_filters": 200,
            "ngram_filter_sizes": [
                1,
                2,
                3,
                4
            ]
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ],
        "padding_noise": 0,
        "batch_size": 2
    },
    "trainer": {
        "num_epochs": 15,
        "cuda_device": std.extVar('CUDA_DEVICE'),
        "grad_clipping": 1,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam"
        }
    }
}
