{
    "dataset_reader": {
        "type": "twtc_reader"
    },
    "train_data_path": "datasets/twtc/test.csv",
    "validation_data_path": "tests/fixtures/twtc_sample.csv",
    "model": {
        "type": "HAN",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 25,
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "HierarchicalAttention",
            "word_encoder": {
                "type": "gru",
                "input_size": 25,
                "hidden_size": 25,
                "num_layers": 1
            },
            "sent_encoder": {
                "type": "intra_sentence_attention",
                "input_dim": 25,
                "output_dim": 25
            }
        },
        "classifier_feedforward": {
            "input_dim": 25,
            "num_layers": 3,
            "hidden_dims": [
                25,
                25,
                1
            ],
            "activations": [
                "sigmoid",
                "sigmoid",
                "linear"
            ]
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 2
    },
    "trainer": {
        "num_epochs": 1,
        "cuda_device": -1,
        "grad_clipping": 5,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "sgd",
            "lr": 1.0
        }
    }
}