{
    "dataset_reader": {
        "type": "twtc_reader"
    },
    "train_data_path": "datasets/twtc/test.csv",
    "validation_data_path": "tests/fixtures/twtc_sample.csv",
    "model": {
        "type": "HAN",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 25,
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "HierarchicalAttention",
            "word_encoder": {
                "type": "gru",
                "input_size": 25,
                "hidden_size": 25,
                "num_layers": 1
            },
            "sent_encoder": {
                "type": "intra_sentence_attention",
                "input_dim": 25,
                "output_dim": 25
            }
        },
        "classifier_feedforward": {
            "input_dim": 25,
            "num_layers": 3,
            "hidden_dims": [
                25,
                25,
                2
            ],
            "activations": [
                "sigmoid",
                "sigmoid",
                "linear"
            ]
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 2
    },
    "trainer": {
        "type": "callback",
        "num_epochs": 3,
        "cuda_device": -1,
        "optimizer": {
            "type": "sgd",
            "lr": 1.0
        },
        "callbacks": [
            {
                "type": "track_metrics",
                "validation_metric": "+accuracy"
            },
            {
                "type": "checkpoint",
                "serialization_dir": "saved/twtc/attention/HAN"
            },
            {
                "type": "neptune",
                "project": "jacobdanovitch/Trouble-with-the-Curve",
                "experiment_args": {
                    "name": "twtc-test",
                    // tags: [""],
                    // properties: {},
                },
                "artifacts": [
                    "saved/twtc/attention/HAN/config.json"
                ]
            }
        ]
    }
}