{
    "dataset_reader": {
        "type": "twtc_reader"
    },
    "train_data_path": "tests/fixtures/twtc_sample.csv",
    "validation_data_path": "tests/fixtures/twtc_sample.csv",
    "model": {
        "type": "HAN",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 25,
                    "trainable": false
                }
            }
        },
        "encoder": {
            "type": "HierarchicalAttention",
            "input_size": 25,
            "hidden_size": 25,
            "attention_size": 25
            
        },
        "classifier_feedforward": {
            "input_dim": 25,
            "num_layers": 2,
            "hidden_dims": [
                25,
                25
            ],
            "activations": [
                "linear",
                "linear"
            ],
            "dropout": [
                0.2,
                0
            ]
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ],
        "padding_noise": 0,
        "batch_size": 2
    },
    "trainer": {
        "num_epochs": 1,
        "cuda_device": -1,
        "grad_clipping": null,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adagrad"
        }
    }
}