{
    "dataset_reader": {
        "type": null
    },
    "train_data_path": null,
    "validation_data_path": null,
    "model": {
        "type": "classifier_with_metrics",
        "metrics": {
            "categorical_accuracy": {},
            
            "f1": {
                "positive_label": 1
            }
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,          
                    "pretrained_file": "https://allennlp.s3.amazonaws.com/datasets/glove/glove.840B.300d.txt.gz",
                    "trainable": true
                    
                }
            }
        },
        "seq2vec_encoder": {
            "type": "stacked_bidirectional_lstm",
            "input_size": 300,
            "hidden_size": 300,
            "num_layers": 1
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [
            [
                "tokens",
                "num_tokens"
            ]
        ],
        "padding_noise": 0,
        "batch_size": 16
    },
    "trainer": {
        "num_epochs": 15,
        "cuda_device": null,
        "grad_clipping": 1,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
