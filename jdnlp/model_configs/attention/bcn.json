{
    "model": {
        "type": "bcn",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    // "pretrained_file": "https://allennlp.s3.amazonaws.com/datasets/glove/glove.840B.300d.txt.gz",
                    "type": "embedding",
                    "embedding_dim": 300,
                    "trainable": true
                }
            }
        },
        "embedding_dropout": 0.25,
        "pre_encode_feedforward": {
            "input_dim": 300,
            "num_layers": 1,
            "hidden_dims": [
                300
            ],
            "activations": [
                "relu"
            ],
            "dropout": [
                0.25
            ]
        },
        "encoder": {
            "type": "lstm",
            "input_size": 300,
            "hidden_size": 300,
            "num_layers": 1,
            "bidirectional": true
        },
        "integrator": {
            "type": "lstm",
            "input_size": 1800,
            "hidden_size": 300,
            "num_layers": 1,
            "bidirectional": true
        },
        "integrator_dropout": 0.1,
        "output_layer": {
            "input_dim": 2400,
            "num_layers": 3,
            "output_dims": [
                1200,
                600,
                2
            ],
            "pool_sizes": 4,
            "dropout": [
                0.2,
                0.3,
                0
            ]
        }
    }
}