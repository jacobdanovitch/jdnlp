{
    "model": {
        "type": "HAN",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "HierarchicalAttention",
            "word_encoder": {
                "type": "intra_sentence_attention",
                "input_dim": 300,
                "output_dim": 300
            },
            "sent_encoder": {
                "type": "intra_sentence_attention",
                "input_dim": 300,
                "output_dim": 300
            }
        },
        "classifier_feedforward": {
            "input_dim": 300,
            "num_layers": 3,
            "hidden_dims": [
                300,
                300,
                2
            ],
            "activations": [
                "relu",
                "relu",
                "linear"
            ],
            "dropout": [
                0.0,
                0.0,
                0
            ]
        }
    },
    "trainer": {
        "grad_clipping": null,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam"
        }
    }
}