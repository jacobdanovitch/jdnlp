{
    "model": {
        "type": "HAN",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 25,
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "HierarchicalAttention",
            "word_encoder": {
                "type": "gru",
                "input_size": 25,
                "hidden_size": 25,
                "num_layers": 1
            },
            "sent_encoder": {
                "type": "intra_sentence_attention",
                "input_dim": 25,
                "output_dim": 25
            }
        },
        "classifier_feedforward": {
            "input_dim": 25,
            "num_layers": 3,
            "hidden_dims": [
                25,
                25,
                2
            ],
            "activations": [
                "tanh",
                "tanh",
                "linear"
            ]
        },
        "loss_weights": [
            0.1, 
            1.0
        ]
    },
    "trainer": {
        "num_epochs": 3,
        "cuda_device": 0,
        "grad_clipping": 1,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "sgd",
            "lr": 0.01
        }
    }
}
