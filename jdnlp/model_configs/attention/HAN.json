{
    "model": {
        "type": "HAN",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 100,
                    "trainable": true
                }
            }
        },
        "encoder": {
            "type": "HierarchicalAttention",
            "word_encoder": {
                //"type": "intra_sentence_attention",
                //"input_dim": 100,
                //"output_dim": 100
                "type": "gru",
                "input_size": 100,
                "hidden_size": 100
            },
            "sent_encoder": {
                "type": "gru",
                "input_size": 100,
                "hidden_size": 100
            }
        },
        "classifier_feedforward": {
            "input_dim": 100,
            "num_layers": 3,
            "hidden_dims": [
                100,
                100,
                2
            ],
            "activations": [
                "relu",
                "relu",
                "linear"
            ],
            "dropout": [
                0.0,
                0.0,
                0
            ]
        }
    }
}